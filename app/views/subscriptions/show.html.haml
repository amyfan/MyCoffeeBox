#dashboard.content

  %h1 Subscription Details

  %p#notice= notice

  - if can? :manage, User
    %p
      %b Subscription ID:
      = @subscription.id
    %p
      %b Conekta ID:
      = @subscription.conekta_id
    %p
      %b User Email:
      - if @subscription.user != nil
        = @subscription.user.email
  %p
    %b Start Date:
    = @subscription.start_date
  %p
    %b Shipping Period:
    = @subscription.shipping_period
    weeks
  %p
    %b Billing Period:
    = @subscription.billing_period
    weeks
  %p
    %b Coffee Type:
    = @subscription.coffee_type
  %p
    %b Payment Status:
    = @subscription.payment_status
  - if can? :manage, User
    %p
      %b Referral Email:
      = @subscription.referral_email
    %p
      %b Promo Code:
      = @subscription.promo_code
    %p
      %b Utm source:
      = @subscription.utm_source
    %p
      %b Utm medium:
      = @subscription.utm_medium
    %p
      %b Utm term:
      = @subscription.utm_term
    %p
      %b Utm content:
      = @subscription.utm_content
    %p
      %b Utm campaign:
      = @subscription.utm_campaign

  = render_cell :product_item, :display, :subscription => @subscription
  = render_cell :shipping_info, :display, :subscription => @subscription
  = render_cell :payment, :display, :payments => @subscription.payments
  - if can? :manage, User
    = link_to 'New Payment (test)', new_payment_path(:subscription_id => @subscription.id), :class => "prominent"
    %p &nbsp;
    = link_to 'Edit', edit_subscription_path(@subscription), :class => "prominent"
    \|
  - else
    %p &nbsp;
  = link_to 'Back to Dashboard', dashboards_path, :class => "prominent"
