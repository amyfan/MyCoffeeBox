#dashboard.content

  %p#notice= notice

  %p
    %b Name:
    = @product.name
  %p
    %b Description:
    = @product.description
  %p
    %b Order Type:
    = @product.order_type
  %p
    %b Price:
    = @product.price
  %p
    %b Currency:
    = @product.currency
  %p
    %b Weight:
    = @product.weight
  %p
    %b Image url:
    = @product.image_url

  %p &nbsp;

  = link_to 'Edit', edit_product_path(@product), :class => "prominent"
  \|
  = link_to 'Back to Dashboard', dashboards_path, :class => "prominent"
