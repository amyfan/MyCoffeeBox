#dashboard.content

  %p#notice= notice

  %p
    %b Date:
    = @payment.created_at
  %p
    %b Subscription ID:
    = @payment.subscription_id
  %p
    %b Customer Name:
    = @payment.subscription.user.name
  %p
    %b Amount:
    = @payment.amount
  %p
    %b Currency:
    = @payment.currency

  = render_cell :payment_method, :display, :payment_method => @payment.payment_method
  - if can? :manage, User
    = link_to 'New Payment Method', new_payment_method_path(:payment_id => @payment.id), :class => "prominent"

  %p &nbsp;

  = render_cell :shipment, :display, :shipments => @payment.shipments
  - if can? :manage, User
    = link_to 'New Shipment', new_shipment_path(:payment_id => @payment.id), :class => "prominent"

  %p &nbsp;

  = link_to 'Edit', edit_payment_path(@payment), :class => "prominent"
  \|
  = link_to 'Back to Dashboard', dashboards_path, :class => "prominent"
