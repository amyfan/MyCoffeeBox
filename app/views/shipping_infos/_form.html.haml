= form_for @shipping_info do |f|
  - if @shipping_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shipping_info.errors.count, "error")} prohibited this shipping_info from being saved:"
      %ul
        - @shipping_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id, :readonly => true
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address_one
    = f.text_field :address_one
  .field
    = f.label :address_two
    = f.text_field :address_two
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :additional_info
    = f.text_field :additional_info
  .actions
    = f.submit 'Save'
