      %li{:"data-paymenttype" => 3}
        %h2.lipayment Pademobile
        %h3.lipayment Suscripción de 3 meses
  .actions.siguientepay
    %a.nextpaypal{:href => "#"} <img src="../images/paypal.png" width="250px"/>
