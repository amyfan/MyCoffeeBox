= form_for @payment_method do |f|
  - if @payment_method.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment_method.errors.count, "error")} prohibited this payment_method from being saved:"
      %ul
        - @payment_method.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :payment_type
    = f.text_field :payment_type
  .field
    = f.label :last4
    = f.number_field :last4
  .field
    = f.label :address_one
    = f.text_field :address_one
  .field
    = f.label :address_two
    = f.text_field :address_two
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :phone
    = f.text_field :phone
  .actions
    = f.submit 'Save'
