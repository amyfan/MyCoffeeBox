#shipment

  %h3 Listing Shipments

  %table
    %tr
      %th Shipped date
      %th Received date
      %th Shipment status
      %th Shipment cost
      %th Shipping provider
      %th Notes
      %th

    - @shipments.each do |shipment|
      %tr
        %td= link_to_if shipment.shipped_date, shipment.shipped_date, shipment
        %td= link_to_if shipment.received_date, shipment.received_date, shipment
        %td= link_to shipment.shipment_status, shipment
        %td= link_to_if shipment.shipment_cost, shipment.shipment_cost, shipment
        %td= link_to_if shipment.shipping_provider, shipment.shipping_provider, shipment
        %td= link_to_if shipment.notes, shipment.notes, shipment
        %td= link_to 'Delete', shipment, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Shipment', new_shipment_path
